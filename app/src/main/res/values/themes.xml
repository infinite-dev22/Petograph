<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Petograph" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_500</item>
        <item name="colorPrimaryVariant">@color/pink_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
    </style>

    <style name="Theme.Petograph.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WhiteDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="Theme.Petograph">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="Theme.Petograph.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Petograph.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--    Night Mode Switch Theme Style-->
    <style name="night_mode_switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/night_mode</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <!--    Notificaions Switch Theme Style-->
    <style name="notifications_switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/notifications</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <!--    Private Account Switch Theme Style-->
    <style name="Privacy_switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/private_account</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>
</resources>